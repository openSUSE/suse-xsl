<!-- Colors from the new SUSE homepage (actually not an official palette).
     Prefer these colors. -->

<!ENTITY white                "rgb(255,255,255)">
<!ENTITY light-gray           "rgb(153,153,153)">
<!ENTITY mid-gray             "rgb(102,102,102)"> <!-- #666 -->
<!ENTITY darker-gray          "rgb(51,51,51)">
<!ENTITY dark-gray            "rgb(32,32,32)"> <!-- #202020 -->
<!ENTITY hint-green           "rgb(247,250,246)">
<!ENTITY chamaeleon-green     "rgb(125,194,77)">
<!ENTITY mid-green            "rgb(118,173,45)">
<!ENTITY darker-green         "rgb(94,150,50)"> <!-- #5E9632 -->
<!ENTITY dark-green           "rgb(67,146,57)"> <!-- #439539 -->


<!-- Official SUSE color palette. Second of order. Don't use any greens from
     here. -->

<!ENTITY suse-green-old       "rgb(122,193,66)">
<!ENTITY black                "rgb(0,0,0)">
<!-- No need to define white again. -->
<!ENTITY dark-gray-old        "rgb(70,69,71)">
<!ENTITY medium-gray-old      "rgb(185,185,185)">
<!ENTITY light-gray-old       "rgb(239,239,240)"> <!-- #EFEFF0 -->
<!ENTITY extra-light-gray-old "rgb(245,245,246)">
<!ENTITY bright-green-old     "rgb(212,223,76)">
<!ENTITY medium-green-old     "rgb(0,165,79)">
<!ENTITY dark-green-old       "rgb(0,132,62)">


<!-- Official OpenSUSE color. Use these, if nothing fitting can be found in
     either of the palettes above. Don't use any greens from here. -->

<!ENTITY light-orange         "rgb(252,174,27)">
<!ENTITY mid-orange           "rgb(190,126,2)"> <!-- For the "important" symbol -->
<!ENTITY dark-orange          "rgb(227,80,1)">
<!ENTITY light-butter         "rgb(255,255,102)">
<!ENTITY dark-butter          "rgb(178,178,71)">
<!ENTITY light-lemon          "rgb(148,208,6)">
<!ENTITY dark-lemon           "rgb(34,120,8)">
<!ENTITY light-plum           "rgb(212,196,255)">
<!ENTITY dark-plum            "rgb(76,68,102)">
<!ENTITY light-sky            "rgb(80,130,255)">
<!ENTITY dark-sky             "rgb(0,0,116)">
<!ENTITY light-dust           "rgb(186,189,183)">
<!ENTITY dark-dust            "rgb(46,52,54)">
<!ENTITY light-blood          "rgb(255,77,77)">
<!ENTITY dark-blood           "rgb(140,0,0)">
<!ENTITY suse-os              "rgb(115,186,37)">

<!-- Purple from the Tango set for remarks (matches the HTML version) -->
<!ENTITY tango-plum           "rgb(117,80,123)">

<!-- Special gray to replace italics -->
<!ENTITY italic-replacement         "rgb(120,120,120)">
<!ENTITY bold-replacement           "rgb(240,240,240)">

<!-- High visibility testing colors -->
<!ENTITY test1                "#F0F">
<!ENTITY test1border          "1px solid #F0F">
<!ENTITY test2                "#F00">
<!ENTITY test2border          "1px solid #0BF">
<!ENTITY test3                "#0F0">
<!ENTITY test3border          "1px solid #0F0">
